exemple_list = ["январь", "февраль", "март", "апрель", "май", "июнь", "июль", "август", "сентябрь", "октябрь", "ноябрь", "декабрь"]
user_answ = int(input("Вас приветствует Jarvis v0.2.\nВведите порядковый номер месяца, а я отгадаю что это за месяц: "))
while user_answ > 12:
	user_answ = int(input("В земном году только 12 месяцев. Повторите ввод: "))

print(f'Это {exemple_list.pop(user_answ-1)}\nJarvis v0.2 завершает свою работу.')
